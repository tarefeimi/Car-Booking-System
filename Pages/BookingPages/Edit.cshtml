@page
@model RentalRazorPages.Pages.BookingPages.EditModel

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Booking.BookingId" />
            <div class="form-group">
                <label asp-for="Booking.DateFrom" class="control-label"></label>
                <input asp-for="Booking.DateFrom" class="form-control" />
                <span asp-validation-for="Booking.DateFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.DateTo" class="control-label"></label>
                <input asp-for="Booking.DateTo" class="form-control" />
                <span asp-validation-for="Booking.DateTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.PickUpLocation" class="control-label"></label>
                <input asp-for="Booking.PickUpLocation" class="form-control" />
                <span asp-validation-for="Booking.PickUpLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.ReturnLocation" class="control-label"></label>
                <input asp-for="Booking.ReturnLocation" class="form-control" />
                <span asp-validation-for="Booking.ReturnLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
